{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [".", "bin", "public", "routes", "views"],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "pug,css,js,json"
}
